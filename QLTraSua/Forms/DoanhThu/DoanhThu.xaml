<UserControl x:Class="QLTraSua.Forms.DoanhThu.DoanhThu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QLTraSua.Forms.DoanhThu"
             mc:Ignorable="d" 
           d:DesignHeight="720" d:DesignWidth="1129" Height="710">
    <Grid Background="#F4D8B5" Margin="0,0,0,10" >
        <Label Content="Bảng Thống kê Doanh Thu" 
               HorizontalAlignment="Left" 
               Margin="67,10,0,0" 
               VerticalAlignment="Top" 
               Width="Auto" 
               FontSize="40" 
               FontWeight="Bold" 
               Height="Auto"/>
        <Grid Width="1020" Height="120" VerticalAlignment="Top" Margin="0 107 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>
            <Border
                BorderBrush="Black" 
                Background="AntiqueWhite" 
                BorderThickness="1" 
                CornerRadius="10">
                <StackPanel>
                <TextBlock Text="Tháng có doanh thu cao nhất" 
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="10 5 0 0"/>
                <Grid Height="16"/>
                <TextBlock x:Name="tbtnhiunhat" 
                           Text="Tháng 2 - 120 triệu"
                           FontSize="30" 
                           FontStyle="Italic" 
                           Margin="5,10,0,0" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
            </StackPanel>

        </Border>
        <!--  Đóng thẻ Border -->

        <Border BorderBrush="Black" 
                Background="AntiqueWhite" 
                BorderThickness="1"
                Grid.Column="2"
                CornerRadius="10">

            <StackPanel>
                <TextBlock Text="Tháng có doanh thu thấp nhất" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="10 5 0 0"/>
                <Grid Height="16"/>
                <TextBlock x:Name="tbtitnha" 
                           Text="Tháng 1 - 100 triệu" 
                           FontSize="30" 
                           FontStyle="Italic" 
                           Margin="5,10,0,0" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        <Border BorderBrush="Black" 
                Background="AntiqueWhite" 
                BorderThickness="1" 
                Grid.Column="4"
                CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Trung bình doanh thu" 
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="10 5 0 0"/>
                <Grid Height="16"/>
                <TextBlock x:Name="tbtrungbinh" 
                           Text="110 triệu" 
                           FontSize="30" 
                           FontStyle="Italic"  
                           Margin="5,10,0,0" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        </Grid>
        

        <Border x:Name="ThongKeDoanhThuChiTiet"
                BorderBrush="Black" 
                Background="AntiqueWhite" 
                BorderThickness="1" 
                Margin="44,252,51,26"
                CornerRadius="10">
            <Grid>
                <TextBlock Text="Bảng thống kê chi tiết"
                           FontSize="35"
                           FontWeight="Bold"
                           Margin="20 10 0 0"
 />
                <Border x:Name="bang" 
                        BorderBrush="Black" 
                        Background="AntiqueWhite" 
                        BorderThickness="3" 
                        Margin="116,65,30,56"
                        CornerRadius="10">
                    <Grid x:Name="Dothi">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="5"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="ct1" Background="#F2C193" Grid.Column="1" Height="200" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct2" Background="#F2C193" Grid.Column="3" Height="250" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct3" Background="#F2C193" Grid.Column="5" Height="140" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct4" Background="#F2C193" Grid.Column="7" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct5" Background="#F2C193" Grid.Column="9" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct6" Background="#F2C193" Grid.Column="11" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct7" Background="#F2C193" Grid.Column="13" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct8" Background="#F2C193" Grid.Column="15" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct9" Background="#F2C193" Grid.Column="17" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct10" Background="#F2C193" Grid.Column="19" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct11" Background="#F2C193" Grid.Column="21" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                        <Border x:Name="ct12" Background="#F2C193" Grid.Column="23" Height="10" VerticalAlignment="Bottom" CornerRadius="10 10 0 0"/>
                    </Grid>
                </Border>
                
                <Grid x:Name="GrThang" 
                      VerticalAlignment="Bottom"
                      Width="886" 
                      Margin="82 0 0 10">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="30"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </Grid.Resources>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="T1"
                               x:Name="Thang1"
                               Grid.Column="0"/>
                    <TextBlock Text="T2"
                               x:Name="Thang2"
                               Grid.Column="1"/>
                    <TextBlock Text="T3"
                               x:Name="Thang3"
                               Grid.Column="2"/>
                    <TextBlock Text="T4"
                               x:Name="Thang4"
                               Grid.Column="3"/>
                    <TextBlock Text="T5"
                               x:Name="Thang5"
                               Grid.Column="4"/>    
                    <TextBlock Text="T6"
                               x:Name="Thang6"
                               Grid.Column="5"/>        
                    <TextBlock Text="T7"
                               x:Name="Thang7"
                               Grid.Column="6"/>    
                    <TextBlock Text="T8"
                               x:Name="Thang8"
                               Grid.Column="7"/>    
                    <TextBlock Text="T9"
                               x:Name="Thang9"
                               Grid.Column="8"/>        
                    <TextBlock Text="T10"
                               x:Name="Thang10"
                               Grid.Column="9"/>        
                    <TextBlock Text="T11"
                               x:Name="Thang11"
                               Grid.Column="10"/>       
                    <TextBlock Text="T12"
                               x:Name="Thang12"
                               Grid.Column="11"/>       
                </Grid>
                
                <Grid x:Name="GrGiaTri"
                        HorizontalAlignment="Left"
                        Height="309"
                        Margin="50 0 0 0">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </Grid.Resources>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="120Tr" 
                               Grid.Row="0"/>
                    <TextBlock Text="100T"
                               Grid.Row="1"/>
                    <TextBlock Text="80Tr"
                               Grid.Row="2"/>
                    <TextBlock Text="60Tr"
                               Grid.Row="3"/>
                    <TextBlock Text="40Tr"
                               Grid.Row="4"/> 
                    <TextBlock Text="20Tr"
                               Grid.Row="5"/>
                    <TextBlock Text="0Tr"
                               Grid.Row="6"/>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>

                        <TextBlock Text="Trà Sữa Thái Xanh       " FontWeight="Bold" FontSize="16" Margin="5"/>
                        <TextBlock Text="Giá: 50.000đ" Foreground="Red" FontSize="18" FontWeight="Bold"/>
                        <Button Content="Chỉnh sửa" Margin="5" Background="#F4A261" Foreground="White"/>
                    </StackPanel>
                </Border>

                <Border BorderBrush="#E8B897" BorderThickness="2" CornerRadius="10" Margin="10"
                        Background="White" Padding="10">
                    <StackPanel>
                        <Image Source="Images/tra_sua_kem_trung.jpg" Height="150" Width="150"/>
                        <TextBlock Text="Trà Sữa Kem Trứng" FontWeight="Bold" FontSize="16" Margin="5"/>
